<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="image">
	<!-- parameterType의 type이 mybatis에 존재할 경우(int, char, ...) 명시 안해도 됨 -->
	<!-- parameterType에는 매개변수의 타입 명시 -->
	<insert id="insert" parameterType="image"
		useGeneratedKeys="true" keyProperty="ino">
		insert into img
		(iname, idate, idata )
		values
		(#{iname}, now(6), #{idata})
	</insert>
	
	<select id="select" resultType="image">
		SELECT ino, iname, idata, idate
		FROM img
		ORDER BY idate DESC
		LIMIT 0, 4	
	</select>
</mapper>